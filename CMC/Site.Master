            <script>

                $("#projectClient").on("change", function () {
                    var selectedOption = $(this).find("option:selected");
                    var selectedValue = $(this).val();
                    var fullNameInput = $("#quoteName");

                    if (selectedValue && selectedValue !== "new") {
                        // Valid client selected
                        fullNameInput.val(selectedOption.text()); // autofill name
                        //fullNameInput.prop("disabled", true);     // prevent editing
                    } else {
                        // "Other" or "Add New Client" selected
                        fullNameInput.val("");                     // clear input
                        fullNameInput.prop("disabled", false);    // enable editing
                        fullNameInput.focus();                     // focus on input
                    }
                });


                // 🔹 Calculate minimum or maximum deadline based on timeline
                function calculateDeadline(startDate, timeline, mode = "max") {
                    const date = new Date(startDate);
                    if (isNaN(date)) return null;

                    switch (timeline) {
                        case "1-3":
                            date.setMonth(date.getMonth() + (mode === "min" ? 1 : 3));
                            break;
                        case "3-6":
                            date.setMonth(date.getMonth() + (mode === "min" ? 3 : 6));
                            break;
                        case "6plus":
                            date.setMonth(date.getMonth() + (mode === "min" ? 6 : 9)); // assume +9 months as range upper bound
                            break;
                        case "asap":
                            date.setDate(date.getDate() + 7); // ASAP = 1 week default
                            break;
                        default:
                            return null;
                    }

                    return date;
                }

                // 🔹 Format JS date for <input type="date">
                function formatDateForInput(date) {
                    const yyyy = date.getFullYear();
                    const mm = String(date.getMonth() + 1).padStart(2, "0");
                    const dd = String(date.getDate()).padStart(2, "0");
                    return `${yyyy}-${mm}-${dd}`;
                }

                // 🔹 Get today's date formatted for input
                function getTodayFormatted() {
                    return formatDateForInput(new Date());
                }

                // 🔹 Validate and update dates
                function updateDates(autoAdjust = false) {
                    const timeline = $("#timeline").val();
                    let startDateStr = $("#projectStartDate").val();
                    const deadlineStr = $("#projectDeadline").val();

                    // Set start date to today if empty or on timeline change
                    if (!startDateStr || autoAdjust) {
                        const today = getTodayFormatted();
                        $("#projectStartDate").val(today);
                        startDateStr = today;
                    }

                    const startDate = new Date(startDateStr);
                    const today = new Date();
                    today.setHours(0, 0, 0, 0);

                    // 🛑 Prevent past start dates
                    if (startDate < today) {
                        alert("Expected Start Date cannot be in the past. Resetting to today.");
                        $("#projectStartDate").val(getTodayFormatted());
                        return;
                    }

                    // If no timeline selected, skip
                    if (!timeline) return;

                    // Auto-calculate and set expected end date
                    const maxDeadline = calculateDeadline(startDate, timeline, "max");
                    if (maxDeadline) {
                        $("#projectDeadline").val(formatDateForInput(maxDeadline));
                        $("#deadlineHint").text("Suggested Deadline: " + formatDateDisplay(maxDeadline));
                    }
                }

                // 🔹 Format for human display (dd/mm/yyyy)
                function formatDateDisplay(date) {
                    const dd = String(date.getDate()).padStart(2, "0");
                    const mm = String(date.getMonth() + 1).padStart(2, "0");
                    const yyyy = date.getFullYear();
                    return `${dd}/${mm}/${yyyy}`;
                }

                // 🔹 Ensure start and end consistency
                function validateDeadline() {
                    const startDate = new Date($("#projectStartDate").val());
                    const endDate = new Date($("#projectDeadline").val());

                    if (endDate <= startDate) {
                        alert("Expected Deadline must be after the Expected Start Date.");
                        const timeline = $("#timeline").val();
                        const newDeadline = calculateDeadline(startDate, timeline, "max");
                        if (newDeadline) {
                            $("#projectDeadline").val(formatDateForInput(newDeadline));
                        }
                    }
                }

                // 🔹 Event Listeners
                $(document).ready(function () {
                    // When timeline changes → set today as start and calculate end date
                    $("#timeline").on("change", function () {
                        updateDates(true);
                    });

                    // When start date changes → validate and update end date
                    $("#projectStartDate").on("change", function () {
                        updateDates(false);
                    });

                    // When end date manually changed → ensure valid order
                    $("#projectDeadline").on("change", function () {
                        validateDeadline();
                    });
                });


