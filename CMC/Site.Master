                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (response) {
                            showAlert("FROM AJAX SUCCESS", 'INFO');

                            var data = response.d || response; // fallback if d is missing

                            if (data.success) {
                                // Project saved successfully
                                console.log("Project saved:", data.projectId);
                            } else {
                                // Failed to save
                                console.warn("Save failed:", data.message);
                            }

                            // Call optional callback
                            if (callback && typeof callback === "function") {
                                callback(data);
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("AJAX Error Details:");
                            console.log("Status:", status);
                            console.log("Error Message:", error);
                            console.log("HTTP Status Code:", xhr.status);
                            console.log("Response Text:", xhr.responseText);
                        }
                    });
                }

                function getQuoteModalData() {

                    return {
                        projectId: null, // new project
                        clientCode: $("#projectClient").val(),
                        clientName: $("#quoteName").val(),
                        email: $("#quoteEmail").val(),
                        phone: $("#quotePhone").val(),
                        otherContacts: $("#otherContacts").val(),
                        projectType: $("#projectType").val(),
                        projectAddress: $("#projectAddress").val(),
                        projectDescription: $("#projectDetails").val(),
                        estimatedBudget: parseFloat($("#projectBudget").val()) || 0,
                        timeline: $("#timeline").val(),
                        expectedStartDate: $("#projectStartDate").val(),
                        expectedDeadline: $("#projectDeadline").val(),
                        projectName: $("#mdAddprj-txtHouseName").val(),
                        referenceName: $("#mdAddprj-txtReferenceName").val(),
                    };
                }


                // Map service IDs to names
                const serviceMap = {
                    "SRV_001": "Architectural Design",
                    "SRV_002": "Project Planning",
                    "SRV_003": "New Home Construction",
                    "SRV_004": "Construction Management",
                    "SRV_005": "Site Preparation",
                    "SRV_006": "Renovation",
                    "SRV_007": "Room Extensions",
                    "SRV_008": "Roofing Solutions",
                    "SRV_009": "Structural Repairs"
                };

                // Function to generate project name
                function generateProjectName() {
                    const serviceId = $("#projectType").val();
                    const serviceName = serviceMap[serviceId] || "Construction";
                    const client = $("#projectClient").val() || "GEN";
                    const address = $("#projectAddress").val() || "LOC";

                    // Take initials of service name
                    const serviceShort = serviceName
                        .split(' ')
                        .map(word => word[0])
                        .join('')
                        .toUpperCase();

                    const clientShort = client.substring(0, 3).toUpperCase();
                    const locShort = address.substring(0, 3).toUpperCase();

                    // Simple random number for uniqueness
                    const randomNum = Math.floor(Math.random() * 900 + 100); // 100-999

                    const projectName = `${serviceShort}_${clientShort}_${locShort}_${randomNum}`;

                    $("#mdAddprj-txtHouseName").val(projectName);
                }

                // Trigger auto-generation on change
                $("#projectType, #projectClient, #projectAddress").on("input change", generateProjectName);

                // Optional: generate immediately if fields already filled
                $(document).ready(generateProjectName);


                $(document).ready(function () {

                    $("#submitQuote").on("click", function () {

                        let valid = true;
                        $('#quoteForm input, #quoteForm select, #quoteForm textarea').each(function () {
                            if (!$(this).val()) {
                                valid = false;
                                $(this).addClass('is-invalid');
                            } else {
                                $(this).removeClass('is-invalid');
                            }
                        });

                        if (valid) {
                            var projectData = getQuoteModalData();
                            saveProject(projectData, function (response) {

                                if (response.success) {
                                    // response.projectId
                                    showAlert("Project reqruest submitted successfully!");
                                    window.location.reload();
                                } else {
                                    alert("Error saving project: " + response.message);
                                }
                            });
                        }
                       
                    });
                });
            </script>
        </div>

